<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PackageSplitter">
    <Style x:Key="CellStackPanelDefaultStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="LightGreen"/>
    </Style>
    <Style x:Key="CellStackPanelEmptytStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="LightPink"/>
    </Style>
    <Style x:Key="CellStackPanelAddStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="LimeGreen"/>
        <Setter Property="TextBlock.Foreground" Value="#FF002E00"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="CellStackPanelDeleteStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="Red"/>
        <Setter Property="TextBlock.Foreground" Value="#FFFFE6EA"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="CellStackPanelLinkStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="#FFD8B100"/>
        <Setter Property="TextBlock.Foreground" Value="DarkMagenta"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>