<UserControl x:Class="PackageSplitter.Templates.SplitterCell"
             x:Name="uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Convertrs="clr-namespace:PackageSplitter.Convertrs" 
             xmlns:local="clr-namespace:PackageSplitter.Templates">
    <UserControl.Resources>
        <Convertrs:ElementStateToStringConverter x:Key="ElementStateToStringConverter"/>
    </UserControl.Resources>    
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="tb" Text="{Binding Path=TextToDisplay, ElementName=uc, Mode=OneWay}"/>
        <Button Content="V" Width="20" Margin="5" Click="Button_Click"/>
        <Button Content="X" Width="20" Margin="5"/>
    </StackPanel>
</UserControl>
