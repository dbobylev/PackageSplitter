<UserControl x:Class="PackageSplitter.Templates.OldSpecCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Convertrs="clr-namespace:PackageSplitter.Convertrs" 
             xmlns:local="clr-namespace:PackageSplitter.Templates">
    <UserControl.Resources>
        <Convertrs:ElementStateToStringConverter x:Key="ElementStateToStringConverter"/>
    </UserControl.Resources>    
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding OldSpec, Converter={StaticResource ElementStateToStringConverter}}" MinWidth="100" Margin="5"/>
        <Button Content="V" Width="20" Margin="5"/>
        <Button Content="X" Width="20" Margin="5"/>
    </StackPanel>
</UserControl>
