<UserControl x:Class="PackageSplitter.View.SplitterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PackageSplitter.View"
             xmlns:ViewModel="clr-namespace:PackageSplitter.ViewModel" 
             xmlns:Convertrs="clr-namespace:PackageSplitter.Convertrs" 
             xmlns:Templates="clr-namespace:PackageSplitter.View.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Convertrs:ElementStateToStringConverter x:Key="ElementStateToStringConverter"/>
        <Templates:SplitterCell x:Key="SplitterCell"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="MainGrid" ItemsSource="{Binding Elements}" AutoGenerateColumns="False">
            <DataGrid.DataContext>
                <ViewModel:PackageVM/>
            </DataGrid.DataContext>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Margin" Value="5,2"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Spec">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Templates:SplitterCell PackageElementID="{Binding ID, Mode=OneWay}"
                                                    SplitterCellAction="SplitterCell_SplitterCellAction" 
                                                    CellType="OldSpec"
                                                    ElementState="{Binding OldSpecState}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Body">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Templates:SplitterCell PackageElementID="{Binding ID, Mode=OneWay}"
                                                    SplitterCellAction="SplitterCell_SplitterCellAction" 
                                                    CellType="OldBody"
                                                    ElementState="{Binding OldBodyState}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="NEW Spec">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Templates:SplitterCell PackageElementID="{Binding ID, Mode=OneWay}"
                                                    SplitterCellAction="SplitterCell_SplitterCellAction" 
                                                    CellType="NewSpec"
                                                    ElementState="{Binding NewSpecState}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="NEW Body">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Templates:SplitterCell PackageElementID="{Binding ID, Mode=OneWay}"
                                                    SplitterCellAction="SplitterCell_SplitterCellAction" 
                                                    CellType="NewBody"
                                                    ElementState="{Binding NewBodyState}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
