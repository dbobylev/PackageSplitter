<Window x:Class="PackageSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:View="clr-namespace:PackageSplitter.View"
        xmlns:ViewModel="clr-namespace:PackageSplitter.ViewModel"
        xmlns:Convertrs="clr-namespace:PackageSplitter.ViewModel.Convertrs" 
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400" WindowStartupLocation="CenterScreen" Background="#FFFFD755">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <View:RepositoryView/>
        <View:SplitterView Grid.Column="1"/>
    </Grid>
</Window>
